<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbdefb"
    tools:context="com.checkfood.activity.ProductDeital">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="#2f6699"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout2"
        android:layout_below="@+id/tb_main"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/deitalImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout"
            android:src="@drawable/file_recheado"
            android:layout_gravity="top"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="false" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Product"
            android:id="@+id/detailName"
            android:layout_below="@+id/deitalImage"
            android:layout_alignLeft="@+id/deitalImage"
            android:layout_alignStart="@+id/deitalImage"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:typeface="sans" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ingredients"
            android:id="@+id/deitalIngredients"
            android:paddingLeft="15dp"
            android:typeface="sans"
            android:layout_alignBottom="@+id/scrollView"
            android:layout_alignLeft="@+id/scrollView"
            android:layout_alignStart="@+id/scrollView"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="price"
            android:id="@+id/deitalPrice"
            android:layout_below="@+id/deitalDescription"
            android:layout_alignLeft="@+id/deitalDescription"
            android:layout_alignStart="@+id/deitalDescription"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/LinearLayout3">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ADICIONAR"
            android:id="@+id/btnAddRequest"
            android:background="@drawable/button_fb_gb"
            android:onClick="buttonAdd"
            android:textColor="#fafafa"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

