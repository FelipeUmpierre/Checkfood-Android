<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#bbdefb"
    tools:context="com.checkfood.activity.ProductDeital">

    <ImageView
        android:id="@+id/deitalImage"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ADICIONAR"
        android:id="@+id/btnAddRequest"
        android:background="@drawable/button_fb_gb"
        android:layout_weight="0.10"
        android:onClick="buttonAdd"
        android:textColor="#fafafa"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/screen_border"
        android:layout_below="@+id/deitalImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Product"
            android:id="@+id/detailName"
            android:layout_weight="0.20"
            android:layout_below="@+id/deitalImage"
            android:layout_alignLeft="@+id/deitalImage"
            android:layout_alignStart="@+id/deitalImage"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:typeface="sans" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="ingredients"
            android:id="@+id/deitalIngredients"
            android:layout_below="@+id/detailName"
            android:layout_alignLeft="@+id/detailName"
            android:layout_alignStart="@+id/detailName"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:textStyle="italic"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="description"
            android:id="@+id/deitalDescription"
            android:layout_below="@+id/deitalIngredients"
            android:layout_alignLeft="@+id/deitalIngredients"
            android:layout_alignStart="@+id/deitalIngredients"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:layout_weight="0.20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="price"
            android:id="@+id/deitalPrice"
            android:layout_below="@+id/deitalDescription"
            android:layout_alignLeft="@+id/deitalDescription"
            android:layout_alignStart="@+id/deitalDescription"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:layout_weight="0.20" />
    </LinearLayout>

</RelativeLayout>
