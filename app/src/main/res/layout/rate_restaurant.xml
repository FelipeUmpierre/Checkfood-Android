<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#bbdefb"
    tools:context="com.checkfood.activity.RateRestaurant"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De sua Nota!"
        android:id="@+id/lblGrade"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarGrade"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:layout_marginTop="10dp"
        android:animationResolution="@android:integer/config_mediumAnimTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua opiniÃ£o:"
        android:id="@+id/lblOpinion"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="16dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:background="@drawable/screen_border"
        android:ems="10"
        android:id="@+id/txtOpinion"
        android:layout_weight="0.99"
        android:layout_gravity="center_vertical"
        android:autoText="false"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_fb_gb"
        android:text="Enviar"
        android:id="@+id/txtSubmit"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="#fafafa" />
</LinearLayout>
